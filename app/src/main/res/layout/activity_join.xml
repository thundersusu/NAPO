<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join">

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Log in on bear:)"
        android:textColor="#8D744F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/dalseodarling"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="333dp"
        android:layout_height="57dp"
        android:layout_marginTop="244dp"
        android:width="333dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:padding="15dp"
        android:ems="10"
        android:hint="이메일 입력"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/custom_email"
        android:fontFamily="@font/dalseodarling"/>

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="333dp"
        android:layout_height="57dp"
        android:layout_marginTop="4dp"
        android:width="333dp"
        android:drawableLeft="@drawable/ic_baseline_drive_file_rename_outline_24"
        android:ems="10"
        android:hint="이름"
        android:inputType="textPersonName"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_mpw2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_mpw2"
        app:layout_constraintTop_toBottomOf="@+id/edt_mpw2"
        android:background="@drawable/custom_id"
        android:fontFamily="@font/dalseodarling"/>

    <EditText
        android:id="@+id/edt_mpw"
        android:layout_width="333dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:width="333dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_email"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        android:background="@drawable/custom_password"
        android:fontFamily="@font/dalseodarling"/>

    <EditText
        android:id="@+id/edt_mpw2"
        android:layout_width="333dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:width="333dp"
        android:drawableLeft="@drawable/ic_baseline_check_box_24"
        android:padding="15dp"
        android:ems="10"
        android:hint="비밀번호 학인"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edt_mpw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_mpw"
        app:layout_constraintTop_toBottomOf="@+id/edt_mpw"
        android:background="@drawable/custom_password"
        android:fontFamily="@font/dalseodarling"/>

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="333dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:width="333dp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:ems="10"
        android:hint="휴대전화 번호"
        android:inputType="phone"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_name"
        android:background="@drawable/custom_phone"
        android:fontFamily="@font/dalseodarling"/>

    <TextView
        android:id="@+id/tv_agr"
        android:layout_width="226dp"
        android:layout_height="29dp"
        android:layout_marginEnd="24dp"
        android:text="(필수) 개인정보 수집 및 이용에 동의"
        android:textAlignment="center"
        android:textColor="#8D744F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"
        android:fontFamily="@font/dalseodarling"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="66dp"
        android:layout_height="49dp"
        android:layout_marginEnd="56dp"
        android:text="동의"
        android:textColor="#8D744F"
        android:textColorLink="#8D744F"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"
        android:fontFamily="@font/dalseodarling"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_loginbear" />

</androidx.constraintlayout.widget.ConstraintLayout>