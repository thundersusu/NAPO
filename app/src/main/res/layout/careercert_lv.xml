<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="553dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="549dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/custom1">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:text="자격증명"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:fontFamily="@font/dalseo"/>

                <SearchView
                    android:id="@+id/certName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iconifiedByDefault="false"
                    app:queryHint="자격증명을 입력하세요" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/custom1">

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:text="발급기관"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:fontFamily="@font/dalseo"/>

                <EditText
                    android:id="@+id/certInst"
                    android:layout_width="262dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="발급기관을 입력하세요"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/dalseo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/custom1">

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="50dp"
                    android:text="발급일자"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:fontFamily="@font/dalseo"/>

                <EditText
                    android:id="@+id/certDate"
                    android:layout_width="219dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="발급일자를 입력하세요"
                    android:inputType="date"
                    android:fontFamily="@font/dalseo"/>

                <ImageButton
                    android:id="@+id/certCal"
                    android:layout_width="48dp"
                    android:layout_height="50dp"
                    android:contentDescription="달력 이미지"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="347dp"
                android:layout_height="314dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/img_c" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="124dp">

        <TextView

            android:id="@+id/textView"
            android:layout_width="261dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button"
            android:backgroundTint="#263BF4"
            android:elevation="20dp"

            android:fontFamily="@font/dalseo"
            android:gravity="center"
            android:text="확인"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>